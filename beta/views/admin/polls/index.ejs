<!DOCTYPE html>
<html>

<head>
    <title>Manage Polls - Naruto Arena Admin</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <style>
        .admin-container {
            width: 800px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border: 1px solid #000;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background: #eee;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 5px 10px;
            background: #eee;
            border: 1px solid #999;
            text-decoration: none;
            color: black;
            cursor: pointer;
            display: inline-block;
        }

        .btn-danger {
            background: #ffdddd;
        }

        .admin-nav {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="admin-container">
        <h1>Manage Polls</h1>
        <div class="admin-nav">
            <a href="/admin/characters" class="btn">Back to Characters Admin</a>
            <a href="/admin/news" class="btn">Manage News</a>
            <a href="/" class="btn">Back to Site</a>
        </div>
        <div style="margin-bottom: 20px;">
            <a href="/admin/polls/create" class="btn">Create New Poll</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Created At</th>
                    <th>Options / Votes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (polls.length===0) { %>
                    <tr>
                        <td colspan="4">No polls found.</td>
                    </tr>
                    <% } else { %>
                        <% polls.forEach(poll=> { %>
                            <tr>
                                <td>
                                    <%= poll.question %>
                                </td>
                                <td>
                                    <%= new Date(poll.createdAt).toLocaleString() %>
                                </td>
                                <td>
                                    <ul>
                                        <% poll.options.forEach(opt=> { %>
                                            <li>
                                                <%= opt.text %>: <b>
                                                        <%= opt.votes %>
                                                    </b>
                                            </li>
                                            <% }); %>
                                    </ul>
                                </td>
                                <td>
                                    <div class="actions">
                                        <a href="/admin/polls/edit/<%= poll.id %>" class="btn">Edit</a>
                                        <form action="/admin/polls/delete/<%= poll.id %>" method="POST"
                                            onsubmit="return confirm('Are you sure?');">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>