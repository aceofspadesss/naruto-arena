<!DOCTYPE html>
<html>

<head>
    <title>Manage Users - Naruto Arena Admin</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <style>
        .admin-container {
            width: 800px;
            margin: 20px auto;
            background: #fff;
            padding: 20px;
            border: 1px solid #000;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background: #eee;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 5px 10px;
            background: #eee;
            border: 1px solid #999;
            text-decoration: none;
            color: black;
            cursor: pointer;
            display: inline-block;
        }

        .btn-danger {
            background: #ffdddd;
        }

        .admin-nav {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="admin-container">
        <h1>Manage Users</h1>
        <div class="admin-nav">
            <a href="/admin/characters" class="btn">Back to Characters Admin</a>
            <a href="/admin/polls" class="btn">Manage Polls</a>
            <a href="/admin/news" class="btn">Manage News</a>
            <a href="/" class="btn">Back to Site</a>
        </div>
        <div style="margin-bottom: 20px;">
            <a href="/admin/users/create" class="btn">Create New User</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Wins/Losses</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length===0) { %>
                    <tr>
                        <td colspan="4">No users found.</td>
                    </tr>
                    <% } else { %>
                        <% users.forEach(user=> { %>
                            <tr>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.role || 'member' %>
                                </td>
                                <td>
                                    <%= user.wins %> / <%= user.losses %>
                                </td>
                                <td>
                                    <div class="actions">
                                        <a href="/admin/users/edit/<%= user.id %>" class="btn">Edit</a>
                                        <form action="/admin/users/delete/<%= user.id %>" method="POST"
                                            onsubmit="return confirm('Are you sure you want to delete user <%= user.username %>?');">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>