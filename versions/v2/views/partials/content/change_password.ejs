<% } %>
<% if (typeof error !=='undefined' && error) { %>
    <div class="error" style="text-align: center;">
        <%= error %>
    </div>
<% } %>

<form method="post" class="formdata">
	<table class="max">
		<tbody><tr>
			<td class="title" colspan="2"><img class="pre" src="/images/pres/pre3.gif"> Change Password</td>
		</tr>
		<tr class="color2">
			<td class="info" colspan="2">Enter your current password for verification.</td>
		</tr>
		<tr class="color1">
			<td width="25%">
				<label for="current_password">Current password:</label>
			</td>
			<td width="75%">
				<input type="password" name="current_password" id="current_password" size="30" value="" required>
			</td>
		</tr>
		<tr class="color2">
			<td class="info" colspan="2">Fill in your new password. This password needs to be at least 3 characters long and is not case sensitive. The max number of characters is 16.</td>
		</tr>
		<tr class="color1">
			<td>
				<label for="password">New password:</label>
			</td>
			<td>
				<input type="password" name="password" id="password" size="30" value="" required>
			</td>
		</tr>
		<tr class="color2">
			<td class="info" colspan="2">Please fill in your password again to make sure you didn't type any mistakes.</td>
		</tr>
		<tr class="color1">
			<td>
				<label for="password_confirm">Confirm password:</label>
			</td>
			<td>
				<input type="password" name="password_confirm" id="password_confirm" size="30" value="" required>
			</td>
		</tr>
		<tr><td class="dots" colspan="2"></td></tr>
	</tbody></table>
	<div class="centerp">
		<input type="submit" class="button" name="changepassword" value="Change Password">
	</div>
</form>
