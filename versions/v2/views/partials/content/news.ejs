<% if (locals.news && news.length > 0) { %>
    <% news.forEach(function(post) { %>
        <div class="newsheader">
            <a class="newsh" href="/<%= post.slug %>/"><%= post.title %></a><br>
            <font class="info">
                <img class="pre" src="/images/pres/pre2.gif"> <%= new Date(post.createdAt).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %> at <%= new Date(post.createdAt).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false }) %> by
                <a href="/profile/<%= post.authorName %>/" class="newsp"><b><%= post.authorName %></b></a>
            </font>
        </div>
        <div class="dots"></div>
        <div class="news"><%- post.content %></div>
        <div class="dots"></div>
        <div class="right">
            <a href="/<%= post.slug %>/"><b>(<%= post.commentCount %>)</b> comments</a>
        </div>
        <br>
    <% }); %>
<% } else { %>
    <div class="news">
        <p>No news posts yet. Check back soon!</p>
    </div>
<% } %>

