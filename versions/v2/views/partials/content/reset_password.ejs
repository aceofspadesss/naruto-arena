<div id="content">
    <div class="brspacer">
        <h1>Lost password</h1><br>
        <div id="pagepath"><a href="/">Naruto Arena</a> &gt; <a href="/main/">Main</a> &gt; <h2>Lost password</h2></div>
    </div>
    <div class="brspacer">

        <div class="brspacer">
        </div>

        <% if (locals.passwordReset) { %>
        <div class="succesfull">Your password has been successfully updated.</div><br>
        <span class="nothing">You can now log in with your new password.</span><br>
        Click <a href="/login"><u>here</u></a> to log in.
        <% } else { %>
        <% if (locals.error) { %>
        <div class="error"><%= error %></div><br>
        <% } %>
        <form method="post">
            <table class="max">
                <tbody>
                    <tr>
                        <td class="title" colspan="2"><img class="pre" src="/images/pres/pre3.gif"> New Password</td>
                    </tr>
                    <tr class="color1">
                        <td class="info" colspan="2">Fill in your new decided password. This password needs to be at least 3 characters long and is not case sensitive. The max number of characters is 16.</td>
                    </tr>
                    <tr class="color2">
                        <td><b>New password:</b></td>
                        <td><input type="password" name="password" size="30" value=""></td>
                    </tr>
                    <tr class="color1">
                        <td class="info" colspan="2">Please fill in your password again to make sure you didn't type any mistakes.</td>
                    </tr>
                    <tr class="color2">
                        <td><b>Confirm password:</b></td>
                        <td><input type="password" name="password_confirm" size="30" value=""></td>
                    </tr>
                    <tr><td class="dots" colspan="2"></td></tr>
                </tbody>
            </table>
            <div class="centerp">
                <input type="submit" class="button" name="sendpassword" value="Send password">
            </div>
        </form>
        <% } %>

    </div>
</div>
<div class="brspacer2">
    <div class="dots"></div>
    <div class="grey">
        <div class="centerp">
            Related subjects: <h3>lost password</h3>, <h3>retrieve password</h3>
