


<div id="content">
        <h1>Naruto Arena</h1><br><div id="hsitemap"><h2>Your #1 Naruto Online Multiplayer Game</h2></div>
    <div class="brspacer">

    <div class="brspacer"></div>

<% if (locals.news && news.length> 0) { %>
    <% news.forEach(function(post) { %>
            <% const newsSlug=post.title.toLowerCase().replace(/\s+/g, '-' ).replace(/[^a-z0-9-]/g, '' ); %>
            <div class="newsheader">
                <a class="newsh" href="/<%= newsSlug %>"><%= post.title %></a><br>
                <font class="info">
                    <img class="pre" src="/images/pres/pre.gif"> <%= new Date(post.createdAt).toLocaleDateString('en-US', { weekday: 'long' , year: 'numeric' , month: 'long' , day: 'numeric' }) %> at <%= new Date(post.createdAt).toLocaleTimeString('en-US', { hour: '2-digit' , minute: '2-digit' , hour12: false }) %>
                    <a href="/profile/<%= post.authorName %>/" class="newsp"><b><%= post.authorName %></b></a>
                </font>
            </div>
            <div class="dots"></div>
            <div class="news">
                <%- post.content %>
            </div>
            <div class="dots"></div>
            <div class="right">
                <a href="/<%= post.slug %>"><b>(<%= post.commentCount %>)</b> comments</a>
            </div>
            <br>
        <% }); %>
    <center>
        <div class="newsarchive">
            <div class="dots"></div>
            <div class="padding2">
                <font class="info">
                    All of the newsposts that have been posted on Naruto Arena can be found in our newsarchive.
                    Browse the newsarchive if you wish to find older newsposts.
                </font>
            </div>
            <div class="centerp2">
                <a href="/news-archive/"> <b>Go to the News Archive</b></a>
            </div>
            <div class="dots"></div>
        </div>
    </center>
<% } else { %>
    <div class="news">
        No news posts yet. Check back soon!
    </div>
<% } %>

